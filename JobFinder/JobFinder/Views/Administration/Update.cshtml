@model JobFinder.ViewModels.OutputViewModels.UpdateViewModel
@{
    ViewData["Title"] = "Update";
}

<div class="site-wrap" style="background-image: url('~/images/hero_2.jpg');">

    <div class="~/site-mobile-menu-body">
        <div class="~/site-mobile-menu-header">
            <div class="site-mobile-menu-close mt-3">
                <span class="icon-close2 js-menu-toggle"></span>
            </div>
        </div>
        <div class="site-mobile-menu-body"></div>
    </div> <!-- .site-mobile-menu -->


    <div class="site-navbar-wrap js-site-navbar bg-white">

        <div class="container">
            <div class="site-navbar bg-light">
                <div class="py-1">
                    <div class="row align-items-center">
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div style="height: 113px;"></div>

    <div class="unit-5 overlay">
        <div class="container text-center">
            <h2 class="mb-0">Update Job</h2>
            <p class="mb-0 unit-6"><a asp-controller="Home" asp-action="Index">Home</a> <span class="sep">></span> <span>Update Job</span></p>
        </div>
    </div>

    <div class="site-section bg-light">
        <div class="container">
            <div class="row">

                <div class="col-md-12 col-lg-8 mb-5">
                    <form method="post" class="p-5 bg-white">
                        <div class="row form-group">
                            <div class="col-md-12 mb-3 mb-md-0">
                                <label class="font-weight-bold" asp-for="@Model.JobTitle" value="@Model.JobTitle id="JobTitle">Job Title</label>
                                <input type="text" id="JobTitle" asp-for="@Model.JobTitle" value="@Model.JobTitle"  id="JobTitle" class="form-control" placeholder="@Model.JobTitle">
                            </div>
                        </div>

                        <div class="row form-group mb-5">
                            <div class="col-md-12 mb-3 mb-md-0">
                                <label class="font-weight-bold" asp-for="@Model.Location" value="@Model.Location" id="Location">Location</label>
                                <input type="text" id="Location" asp-for="@Model.Location" value="@Model.Location" id="Location" class="form-control" placeholder="@Model.Location">
                            </div>
                        </div>


                        <div class="row form-group mb-5">
                            <div class="col-md-12 mb-3 mb-md-0">
                                <label class="font-weight-bold" asp-for="@Model.Salary" value="@Model.Salary" id="Salary">Salary</label>
                                <input type="text" id="salary" asp-for="@Model.Salary" value="@Model.Salary" id="Salary" class="form-control" placeholder="@Model.Salary">
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="@Model.JobType" id="JobType" class="control-label"></label>
                            <select asp-for="@Model.JobType" id="JobType" class="form-control">
                                <option value="@Model.JobType" selected disabled>@Model.JobType</option>
                                <option value="FullTime">Full-Time</option>
                                <option value="PartTime">Part-Time</option>
                                <option value="WorkOnShifts">On-Shifts</option>

                            </select>
                        </div>

                        <div class="row form-group">
                            <div class="col-md-12">
                                <h3>Job Description</h3>
                            </div>
                            <div class="col-md-12 mb-3 mb-md-0">
                                <textarea placeholder="@Model.Description" name="Description"  class="form-control" asp-for="@Model.Description" id="Description" cols="30" rows="5">@Model.Description</textarea>
                            </div>
                        </div>

                        <div class="row form-group">
                            <div class="col-md-12">
                                <input type="submit" asp-controller="Administration" asp-action="Update" value="Update Job" class="btn btn-primary  py-2 px-5">
                            </div>
                        </div>

                    </form>
                </div>

            </div>
        </div>
    </div>

