@model JobFinder.ViewModels.InputViewModels.UpdateCvViewModel
@{
    ViewData["Title"] = "UpdateCv";
}


    <div class="hero-wrap js-fullheight" style="background-image: url('../../images/bg_2.jpg');" data-stellar-background-ratio="0.5">
        <div class="overlay"></div>
        <div class="container">
            <div class="row no-gutters slider-text js-fullheight align-items-end justify-content-start" data-scrollax-parent="true">
                <div class="col-md-8 ftco-animate text-center text-md-left mb-5" data-scrollax=" properties: { translateY: '70%' }">
                    <h1 class="mb-3 bread" data-scrollax="properties: { translateY: '30%', opacity: 1.6 }">Update Cv</h1>
                </div>
            </div>
        </div>
    </div>

<section class="ftco-section bg-light">
    <div class="container">
        <div class="row d-flex">
            <div class="col-md-12 col-lg-8 mb-5">
                <form method="post" class="p-5 bg-white">

                    <div class="row form-group">
                        <div class="col-md-12 mb-3 mb-md-0">
                            <label class="font-weight-bold" asp-for="ImageUrl">Image Url:</label>
                            <input type="text" id="ImageUrl" asp-for="ImageUrl" class="form-control" placeholder="Image Url">
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col-md-12">
                            <h3>Description</h3>
                        </div>
                        <div class="col-md-12 mb-3 mb-md-0">
                            <textarea placeholder="@Model.Description" name="Description" class="form-control" asp-for="Description" id="Description" cols="30" rows="5"></textarea>
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col-md-12">
                            <input type="submit" asp-controller="Cv" asp-action="UpdateCv" value="Update Cv" class="btn btn-primary  py-2 px-5">
                        </div>
                    </div>
                </form>
            </div>

            <div class="col-lg-4">
                <div class="p-4 mb-3 bg-white">
                    <h3 class="h5 text-black mb-3">Contact Info</h3>
                    <p class="mb-0 font-weight-bold">Address</p>
                    <p class="mb-4">Sofia, Bulgaria. Iztok str: 131 N=1</p>

                    <p class="mb-0 font-weight-bold">Phone</p>
                    <p class="mb-4"><a href="#">0886944369</a></p>

                    <p class="mb-0 font-weight-bold">Email Address</p>
                    <p class="mb-0"><a href="mailto:info@yoursite.com">nenow@abv.bg</a></p>

                </div>

                <div class="p-4 mb-3 bg-white">
                    <h3 class="h5 text-black mb-3">More Info</h3>
                    <p> <p>We are JobFinder. Here are the best job offers. Come and see.</p></p>
                    <p><a asp-controller="Contact" asp-action="Index" class="btn btn-primary  py-2 px-4">Learn More</a></p>
                </div>
            </div>
        </div>
    </div>
</section>

