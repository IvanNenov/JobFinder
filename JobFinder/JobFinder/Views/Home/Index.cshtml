@model JobFinder.ViewModels.OutputViewModels.ListOfAllJobs

@{
    ViewData["Title"] = "Home Page";
}
<div class="hero-wrap js-fullheight" style="background-image: url('images/bg_2.jpg');" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text js-fullheight align-items-center justify-content-start" data-scrollax-parent="true">
            <div class="col-xl-10 ftco-animate mb-5 pb-5" data-scrollax=" properties: { translateY: '70%' }">
                @if (@Model == null)
                {
                    <p class="mb-4 mt-5 pt-5" data-scrollax="properties: { translateY: '30%', opacity: 1.6 }">In this moment we don't have any offers for you</p>

                }
                else
                {
                    <p class="mb-4 mt-5 pt-5" data-scrollax="properties: { translateY: '30%', opacity: 1.6 }">We have <span class="number" data-number="@Model.AllJobs.Count()">0</span> great job offers you deserve!</p>
                }

                <h1 class="mb-5" data-scrollax="properties: { translateY: '30%', opacity: 1.6 }">Your Dream <br><span>Job is Waiting</span></h1>

                <div class="ftco-search">
                    <div class="row">
                        <div class="col-md-12 nav-link-wrap">
                            <div class="nav nav-pills text-center" id="v-pills-tab" role="tablist" aria-orientation="vertical">
                                <a class="nav-link" id="v-pills-2-tab" data-toggle="pill" role="tab" aria-controls="v-pills-2">Find Job</a>
                            </div>
                        </div>
                        <div class="col-md-12 tab-wrap">

                            <div class="tab-content p-4" id="v-pills-tabContent">

                                <div class="tab-pane fade show active" id="v-pills-1" role="tabpanel" aria-labelledby="v-pills-nextgen-tab">
                                    <form method="get" class="search-job">
                                        <div class="row">
                                            <div class="col-md">
                                                <div class="form-group">
                                                    <div class="form-field">
                                                        <div class="icon"><span class="icon-briefcase"></span></div>
                                                        <input type="text" name="SearchTerm" class="form-control" placeholder="eg. Garphic. Web Developer">
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md">
                                                <div class="form-group">
                                                    <div class="form-field">
                                                        <div class="select-wrap">
                                                            <div class="icon"><span class="ion-ios-arrow-down"></span></div>
                                                            <select name="JobType" class="form-control">
                                                                <option selected disabled>Choose...</option>
                                                                <option value="FullTime">Full-Time</option>
                                                                <option value="PartTime">Part-Time</option>
                                                                <option value="WorkOnShifts">On-Shifts</option>

                                                            </select>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="col-md">
                                                <div class="form-group">
                                                    <div class="form-field">
                                                        <input type="submit" asp-controller="Home" asp-action="Index" value="Search" class="form-control btn btn-primary">
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </form>
                                </div>

                                <div class="tab-pane fade" id="v-pills-2" role="tabpanel" aria-labelledby="v-pills-performance-tab">
                                    <form action="#" class="search-job">
                                        <div class="row">
                                            <div class="col-md">
                                                <div class="form-group">
                                                    <div class="form-field">
                                                        <div class="icon"><span class="icon-user"></span></div>
                                                        <input type="text" class="form-control" placeholder="eg. Adam Scott">
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md">
                                                <div class="form-group">
                                                    <div class="form-field">
                                                        <div class="select-wrap">
                                                            <div class="icon"><span class="ion-ios-arrow-down"></span></div>
                                                            <select name="" id="" class="form-control">
                                                                <option value="">Category</option>
                                                                <option value="">Full Time</option>
                                                                <option value="">Part Time</option>
                                                                <option value="">Temporary</option>
                                                            </select>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md">
                                                <div class="form-group">
                                                    <div class="form-field">
                                                        <div class="icon"><span class="icon-map-marker"></span></div>
                                                        <input type="text" class="form-control" placeholder="Location">
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md">
                                                <div class="form-group">
                                                    <div class="form-field">
                                                        <input type="submit" value="Search" class="form-control btn btn-primary">
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript" src="js/jquery-3.2.1.min.js"></script>

<section class="ftco-section bg-light">
    <div class="container">
        <div class="row justify-content-center mb-5 pb-3">
            @if (Model.IsAny)
            {
                <div class="col-md-7 heading-section text-center ftco-animate">
                    <span class="subheading">Recently Added Jobs</span>
                    <h2 class="mb-4"><span>Recent</span> Jobs</h2>
                </div>
            }
            else
            {
                <div class="col-md-7 heading-section text-center ftco-animate">
                    <h2 class="mb-4"><span>We dont't have any offers</span></h2>
                </div>
            }
        </div>
        <div class="row">
            @if (Model != null)
            {
                @foreach (var job in Model.AllJobs)
                {

                    <div class="col-md-12 ftco-animate">

                        <div class="job-post-item bg-white p-4 d-block d-md-flex align-items-center">

                            <div class="mb-4 mb-md-0 mr-5">
                                <div class="job-post-item-header d-flex align-items-center">
                                    <h2 class="mr-3 text-black h3">@job.Name</h2>
                                    <div class="badge-wrap">
                                        <span class="bg-primary text-white badge py-2 px-3">@job.JobType.ToString()</span>
                                    </div>
                                </div>
                                <div class="job-post-item-body d-block d-md-flex">
                                    <div class="mr-3"><span class="icon-layers"></span> <a href="#">@job.CompanyName</a></div>
                                    <div><span class="icon-my_location"></span> <span>@job.CompanyAddress</span></div>
                                </div>
                            </div>

                            <div class="ml-auto d-flex">
                                <a asp-controller="Users" asp-action="ApplyJobs" asp-route-id="@job.Id" class="btn btn-primary py-2 mr-1">Apply Job</a>
                                <a class="btn btn-secondary rounded-circle btn-favorite d-flex align-items-center icon" asp-controller="Users" asp-action="AddToFavoriteJobs" asp-route-id="@job.Id">
                                    <span class="icon-heart" background-imgage="white"></span>
                                </a>
                            </div>
                        </div>
                    </div>
                }
            }
            <!-- end -->

        </div>

        <div class="row mt-5">
            <div class="col text-center">
                <div class="block-27">
                    <ul>
                        @for (int i = 1; i <= Model.TotalPagesCount; i++)
                        {
                            if (i == Model.CurrentPage)
                            {
                                <li class="active"><a asp-controller="Home" asp-action="Index" asp-route-currentPage="@i"><span>@i</span></a></li>
                            }
                            else
                            {
                                <li><a asp-controller="Home" asp-action="Index" asp-route-currentPage="@i"><span>@i</span></a></li>
                            }
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>
